 <!--SIGN UP-->
 <!-- <h1>iOS 7 Login And Register App</h1> -->
<div class="login-form">
  <div class="head-info">
    <h2>Fairy Tail</h2>
    <h3></h3>
    <!-- <h3>世界上也许有人喜欢孤独，但却没有人能承受孤独。</h3> -->
  </div>
  <form>
    <input type="text" id="account" class="text" value="Email" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Email';}" >
    <input type="password" id="password" value="Password" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Password';}">
    <input type="submit" onclick="login()" value="Login" >
  </form>
  <div class="password">
    <a href="#">Password   |   Register</a>
  </div>
</div>
 <!--/SIGN UP-->
 <!--SIGN IN-->
<div class="login-form-1">
  <div class="head-info">
    <h2>SIGN IN</h2>
    <h3>Lorem ipsum dolor sit amet, consectetur adipiscing elit.Donec auctor neque sed pretium luctus.</h3>
  </div>
  <div class="add-photo">
    <h4>Add<br />Photo</h4>
    <input type="file" value="Add Photo" >
     </div>
  <form>
    <input type="text" class="text" value="Name and Surname" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Name and Surname';}" >
    <input type="text" class="text" value="Email Address" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Email Address';}" >
    <input type="text" class="text" value="Phone" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Phone';}" >
    <input type="password" value="Password" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Password';}">
